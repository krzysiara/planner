{% extends 'base.html.twig' %}
{% block pageHeader %}{{"Places list"|trans }} {% endblock %}
{% block pageActions %}
    <a class="btn btn-default" href="{{ path('location_new') }}">{{"Add new"|trans }}</a>
{% endblock %}
{% block body %}


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
        <thead>
            <tr>
                <th>{{"Id"|trans }}</th>
                <th>{{"Name"|trans }}</th>
                <th>{{"Description"|trans }}</th>
                <th>{{"Actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': location.id }) }}">{{ location.id }}</a></td>
                <td>{{ location.name }}</td>
                <td>{{ location.description }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('location_show', { 'id': location.id }) }}">{{"Show"|trans }}</a>
                    <a class="btn btn-default" href="{{ path('location_edit', { 'id': location.id }) }}">{{"Edit"|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center">
        {{ pagerfanta(locations, 'twitter_bootstrap3_translated', { routeName: ('location_index_paginated') }) }}
    </div>
    {# ...#}
</div>
{% endblock %}
