{% extends 'base.html.twig' %}
{% block pageHeader %}Contacts list {% endblock %}
{% block pageActions %}
    <a class="btn btn-default" href="{{ path('contact_new') }}">{{"Add new"|trans }}</a>
{% endblock %}
{% block body %}
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{{"Id"|trans }}</th>
                <th>{{"Name"|trans }}</th>
                <th>{{"Surname"|trans }}</th>
                <th>{{"Email"|trans }}</th>
                <th>{{"Actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td><a href="{{ path('contact_show', { 'id': contact.id }) }}">{{ contact.id }}</a></td>
                <td>{{ contact.name }}</td>
                <td>{{ contact.surname }}</td>
                <td>{{ contact.email }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('contact_show', { 'id': contact.id }) }}">{{"Show"|trans }}</a>
                    <a class="btn btn-default" href="{{ path('contact_edit', { 'id': contact.id }) }}">{{"Edit"|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ pagerfanta(contacts, 'twitter_bootstrap3_translated', { routeName: ('contact_index_paginated') }) }}
    </div>
    </div>

{% endblock %}
