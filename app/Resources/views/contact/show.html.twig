{% extends 'base.html.twig' %}
{% block pageHeader %}{{ contact.fullName }}{% endblock %}

{% block pageActions %}

    <a class="btn btn-default" href="{{ path('contact_index') }}">Back to the list</a>
    <a class="btn btn-default" href="{{ path('note_add_to_contact' , {'contact': contact.id}) }}"><span class="glyphicon glyphicon-list-alt"></span> Add note</a>
    <a class="btn btn-default" href="{{ path('contact_edit', { 'id': contact.id }) }}">Edit</a>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteModal">
       Delete
    </button>
{% endblock %}
{% block body %}
    <h1>Contact</h1>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ contact.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if contact.birthday %}{{ contact.birthday|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
</div>
{# delete modal #}
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="delete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Confirm delete</h4>
            </div>
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                {{ form_start(delete_form) }}
                {{ form_end(delete_form) }}
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input form="delete_form" class="btn btn-default" type="submit" value="Delete">
            </div>
        </div>
    </div>
</div>


{% endblock %}
