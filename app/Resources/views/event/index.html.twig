{% extends 'base.html.twig' %}
{% block pageHeader %}Events{% endblock %}
{% block pageActions %}
    <a class="btn btn-default" href="{{ path('event_new') }}">Add new</a>
{% endblock %}
{% block body %}

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Startdate</th>
                <th>Starttime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{{ event.title }}</td>
                <td>{% if event.startDate %}{{ event.startDate|date('d-m-Y') }}{% endif %}</td>
                <td>{% if event.startTime %}{{ event.startTime|date('H:i:s') }}{% endif %}</td>

                <td>
                    <a class="btn btn-default" href="{{ path('event_show', { 'id': event.id }) }}">Show</a>
                    <a class="btn btn-default" href="{{ path('event_edit', { 'id': event.id }) }}">Edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
