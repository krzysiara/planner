{% extends 'base.html.twig' %}
{% block pageHeader %}{{"Events"|trans }}{% endblock %}
{% block pageActions %}
    <a class="btn btn-default" href="{{ path('event_new') }}">{{"Add new"|trans }}</a>
{% endblock %}
{% block body %}

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{{"Id"|trans }}</th>
                <th>{{"Title"|trans }}</th>
                <th>{{"Startdate"|trans }}</th>
                <th>{{"Starttime"|trans }}</th>
                <th>{{"Actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                <td>{{ event.title }}</td>
                <td>{% if event.startDate %}{{ event.startDate|date('d-m-Y') }}{% endif %}</td>
                <td>{% if event.startTime %}{{ event.startTime|date('H:i:s') }}{% endif %}</td>

                <td>
                    <a class="btn btn-default" href="{{ path('event_show', { 'id': event.id }) }}">{{"Show"|trans }}</a>
                    <a class="btn btn-default" href="{{ path('event_edit', { 'id': event.id }) }}">{{"Edit"|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> <div class="navigation text-center">
        {{ pagerfanta(events, 'twitter_bootstrap3_translated', { routeName: ('event_index_paginated') }) }}
    </div>

</div>
{% endblock %}
